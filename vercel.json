{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/move",         "destination": "/api/index" },
    { "source": "/reset",        "destination": "/api/index" },
    { "source": "/state",        "destination": "/api/index" },
    { "source": "/agent-stream", "destination": "/api/index" },
    { "source": "/(.*)",         "destination": "/index.html" }
  ]
}
